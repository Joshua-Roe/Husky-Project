<launch>

  <arg name="distance" default="0.7"/>
  <arg name="arm_x" default="0.0"/>
  <arg name="arm_z" default="0.75"/>

  <include file="$(find hector_mapping)/launch/mapping_default.launch" >
  <arg name="odom_frame" value="odom"/>
  </include>
  <include file="$(find rss2018)/launch/includes/custom_move_base.launch"/>

  <include file="$(find astra_launch)/launch/astra.launch" />

  <node pkg="tf" type="static_transform_publisher" name="goal_offset" args="$(arg distance) 0 0 0 0 1 0 /object_1 /goal 10" />
  <node pkg="tf" type="static_transform_publisher" name="arm_goal_offset" args="0 0 0 0 0 1 0 /object_2 /arm_goal 10" />
  <node pkg="tf" type="static_transform_publisher" name="start_offset" args="0.1 0 0 0 0 1 0 /map /start_pos 10" />

  <node name="find_object_3d" pkg="find_object_2d" type="find_object_2d" output="screen">
     <param name="gui" value="false" type="bool"/>
     <param name="settings_path" value="~/.ros/find_object_2d.ini" type="str"/>
     <param name="subscribe_depth" value="true" type="bool"/>
     <param name="objects_path" value="/home/administrator/objects" type="str"/>
     <param name="object_prefix" value="object" type="str"/>

     <remap from="rgb/image_rect_color" to="astra/rgb/image_rect_color"/>
     <remap from="depth_registered/image_raw" to="astra/depth_registered/image_raw"/>
     <remap from="depth_registered/camera_info" to="astra/depth_registered/camera_info"/>
  </node>

  <node pkg="rss2018" type="full_demo_test.py" name="demo_manager" output="screen"/>

</launch>

